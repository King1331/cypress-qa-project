{
  "name": "cypress-project",
  "version": "1.0.0",
  "description": "Proyecto Cypress con reportes Mochawesome",
  "scripts": {
    "test": "cypress run",
    "test:report": "cypress run --reporter mochawesome",
    "test:open": "cypress open",
    "clean:reports": "rmdir /s /q cypress\\reports 2>nul || exit 0",
    "report:full": "npm run clean:reports && cypress run --reporter mochawesome"
  },
  "devDependencies": {
    "cypress": "^13.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}